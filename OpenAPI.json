components:
  schemas:
    
    Courses:
      description: Array of courses
      type: array
      items: 
        $ref: '#/components/schemas/Course'
    
    Course:
      description: A course
      properties:
        courseId: 
          type: integer
        courseObjectId:
          type: integer
        title: 
          type: string
        description:
          type: string
        image:
          type: object
        type:
          type: string
        courseDetails:
          type: string
    
    UnitData:
      type: object
      description: Collection of unit data
      properties:
        EngagementStatus:
          type: object
          properties:
            noActiveSurveys: 
              type: boolean
            notEnoughAnswers:
              type: boolean
            minNbrOfAnswers:
              type: integer
        engagementSurveys:
          type: array
          items: 
            type: string
        averages:
          type: array
          items:
            type: string
    